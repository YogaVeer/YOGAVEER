<%- layout("layouts/boilerplate") %>

<h2>Edit Lesson (Working Professionals)</h2>

<form action="/working_professionals/lessons/<%= lesson._id %>?_method=PUT" method="POST">
  <div class="mb-3">
    <label for="lessonTitle" class="form-label">Lesson Title</label>
    <input type="text" class="form-control" id="lessonTitle" name="lessonTitle" value="<%= lesson.title %>" required>
  </div>

  <% if (lesson.videoPath) { %>
    <div class="mb-3">
      <label>Current Video Preview</label><br>
      <video src="<%= lesson.videoPath %>" controls width="300"></video>
    </div>
  <% } %>

  <div class="mb-3">
    <label for="videoPath" class="form-label">Video Link (YouTube, Vimeo, etc.)</label>
    <input type="url" class="form-control" id="videoPath" name="videoPath" value="<%= lesson.videoPath %>" placeholder="https://example.com/video.mp4" required>
  </div>

  <div class="mb-3">
    <label for="sectionId" class="form-label">Select Section</label>
    <select class="form-control" id="sectionId" name="sectionId" required>
      <% sections.forEach(section => { %>
        <option value="<%= section._id %>" <%= section._id.toString() === lesson.section.toString() ? "selected" : "" %>>
          <%= section.title %>
        </option>
      <% }) %>
    </select>
  </div>

  <button type="submit" class="btn btn-dark">Update Lesson</button>
</form>
