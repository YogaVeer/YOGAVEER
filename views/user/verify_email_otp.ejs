<% layout("layouts/boilerplate_login") %>

<h3 class="text-center mb-4">Verify Your Email</h3>

<div class="card shadow-sm mx-auto p-4" style="max-width: 500px;">
  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>
  <% if (success) { %>
    <div class="alert alert-success"><%= success %></div>
  <% } %>

  <!-- Resend OTP form -->
  <form action="/user/send_otp" method="POST" style="margin-bottom: 1rem;">
    <div class="d-flex justify-content-end">
      <button type="submit" class="btn btn-outline-primary btn-sm">Resend OTP</button>
    </div>
  </form>

  <!-- Verify OTP form -->
  <form action="/user/verify_otp" method="POST">
    <div class="mb-3">
      <label class="form-label">Enter OTP sent to <strong><%= email %></strong>:</label>
      <input type="number" name="otp" class="form-control" required>
    </div>
    <div class="d-flex justify-content-end">
      <button type="submit" class="btn btn-primary">Verify OTP</button>
    </div>
  </form>
</div>
