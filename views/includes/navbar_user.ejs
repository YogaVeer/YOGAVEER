<style>
/* Base Navbar Style */
nav {
  z-index: 2;
  padding: 30px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.3);
  position: fixed;
  width: 100%;
  height: 95px;
  font-weight: bold;
  transition: background 0.3s ease;
}

nav.nav-scrolled {
  background: rgba(249, 246, 246, 0.6);
  backdrop-filter: blur(4px);
}

.logo {
  color: rgb(1, 24, 45);
  font-size: 1.5rem;
}

@media (max-width: 600px) {
  .logo {
    text-align: center;
    margin-top: 10px;
  }
}

nav ul {
  display: flex;
  gap: 30px;
  align-items: center;
}

nav ul li {
  list-style-type: none;
}

.option ul li a,
nav ul li a {
  font-size: 1.2rem;
  text-decoration: none;
  color: rgb(1, 24, 45);
  transition: all 0.3s;
}

.option ul li a:hover,
nav ul li a:hover {
  color: #f1ecf4;
  background-color: rgb(1, 24, 45);
  padding: 9px;
  border-radius: 10px;
}

/* Menu Icon */
.menu-icon {
  display: none;
}

.menu-icon-btn {
  font-size: 30px;
  background: none;
  border: none;
  color: rgb(1, 24, 45);
  cursor: pointer;
}


/* Responsive Styles */
@media (max-width: 600px) {
  nav ul {
    position: absolute;
    top: 95px;
    left: 0;
    right: 0;
    flex-direction: column;
    text-align: center;
    background: #f6f3f8;
    gap: 0;
    overflow: hidden;
  }

  nav ul li {
    padding: 20px 0;
  }

  .menu-icon {
    display: block;
  }

  #menuList {
    max-height: 0px;
    overflow: hidden;
    transition: all 0.5s ease;
  }
}
</style>

<script>
  // Scroll navbar effect
  window.addEventListener('scroll', function () {
    const nav = document.querySelector("nav");
    if (window.scrollY > 50) {
      nav.classList.add("nav-scrolled");
    } else {
      nav.classList.remove("nav-scrolled");
    }
  });

  // Toggle mobile menu
  function toggleMenu() {
    const menuList = document.getElementById("menuList");
    menuList.style.maxHeight = menuList.style.maxHeight === "0px" ? "300px" : "0px";
  }
</script>
